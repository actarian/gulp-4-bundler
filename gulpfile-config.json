{
  "targets": {
    "browser": {
      "compile": [
        {
          "input": "src/*.html",
          "output": "dist/",
          "minify": true
        },
        {
          "input": "src/templates/emails/*.mjml",
          "output": "dist/templates/emails/",
          "minify": false
        },
        {
          "input": "src/css/main.scss",
          "output": "dist/css/main.css",
          "minify": true
        },
        {
          "input": "src/js/main.js",
          "output": "dist/js/main.js",
          "globals": {
            "gsap": "gsap"
          },
          "minify": true
        }
      ],
      "bundle": [
        {
          "input": [
            "node_modules/swiper/swiper-bundle.css"
          ],
          "output": "dist/css/vendors.css",
          "minify": true
        },
        {
          "input": [
            "node_modules/gsap/dist/EasePack.js",
            "node_modules/gsap/dist/gsap.js",
            "node_modules/swiper/swiper-bundle.js"
          ],
          "output": "dist/js/vendors.js",
          "minify": true
        }
      ],
      "copy": []
    }
  },
  "server": {
    "root": "./dist",
    "path": "/gulp-4-bundler/",
    "host": "localhost",
    "port": 9999,
    "log": false
  },
  "tfs": false
}

{
  "targets": {
    "browser": {
      "compile": [
        {
          "input": "src/*.html",
          "output": "dist/",
          "minify": true
        },
        {
          "input": "src/templates/emails/*.mjml",
          "output": "dist/templates/emails/",
          "minify": false
        },
        {
          "input": "src/css/main.scss",
          "output": "dist/css/main.css",
          "minify": true
        },
        {
          "input": "src/js/main.js",
          "output": "dist/js/main.js",
          "globals": {
            "gsap": "gsap",
            "rxjs": "rxjs",
            "rxjs/operators": "rxjs.operators",
            "rxcomp": "rxcomp",
            "rxcomp-form": "rxcomp.form"
          },
          "minify": true
        }
      ],
      "bundle": [
        {
          "input": [
            "node_modules/rxcomp/dist/rxcomp-dark.css"
          ],
          "output": "dist/css/vendors.css",
          "minify": true
        },
        {
          "input": [
            "node_modules/gsap/dist/EasePack.js",
            "node_modules/gsap/dist/gsap.js",
            "node_modules/rxjs/bundles/rxjs.umd.js",
            "node_modules/rxcomp/dist/umd/rxcomp.js",
            "node_modules/rxcomp-form/dist/umd/rxcomp-form.js"
          ],
          "output": "dist/js/vendors.js",
          "minify": true
        }
      ],
      "copy": []
    }
  },
  "server": {
    "root": "./dist",
    "path": "/gulp-4-bundler/",
    "host": "localhost",
    "port": 9999,
    "log": false
  },
  "tfs": false
}
